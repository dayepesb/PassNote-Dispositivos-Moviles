<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.edu.poli.passnote.passnote">

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@drawable/passnotelogowhite"
        android:label="@string/app_name"
        android:roundIcon="@drawable/passnotelogowhite"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="stateHidden|adjustResize">
        <activity
            android:name=".access.Login"
            android:noHistory="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".access.SignupActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".MainNavigationActivity" />
        <activity
            android:name=".notes.SaveNotesFragment"
            android:label="@string/title_activity_fragment_save_notes"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>